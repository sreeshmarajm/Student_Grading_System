@model StudentGradingSystem.Models.Student

@{
    ViewData["Title"] = "Create Student Grade";
}

<h1 style="font-family:'Times New Roman', Times, serif;color:darkblue">Create</h1><br />

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group"> 
        <label asp-for="StudentName" class="control-label"></label> 
        <input asp-for="StudentName" class="form-control" /> 
        <span asp-validation-for="StudentName" class="text-danger"></span> 
    </div><br />
    <div class="form-group">
        <label asp-for="SubjectId">Subject</label>
        <select asp-for="SubjectId" asp-items="ViewBag.SubjectId" class="form-control"></select>
    </div><br />
    <div class="form-group">
        <label asp-for="Grade"></label>
        <input asp-for="Grade" class="form-control" />
    </div><br />
    <div class="form-group">
        <label>Remarks</label>
        <input class="form-control" value="(computed after save)" readonly />
    </div><br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>

</form>
